<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#B506C3F3"
    tools:context=".SubActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="KIM and LEE"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boiler Controller"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[ Settings ]"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="serif"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_marginTop="20dp"
        android:background="#039DCC"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_on"
            android:layout_width="140dp"
            android:layout_height="80sp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#377F8C"
            android:text="ON"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_off"
            android:layout_width="140dp"
            android:layout_height="80sp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#1E5368"
            android:text="OFF"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:background="#036887"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="200sp"
            android:layout_height="70sp"
            android:backgroundTint="#15173A"
            android:text="HOME"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_set"
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:backgroundTint="#673AB7"
            android:gravity="center"
            android:text="온도 변경"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>